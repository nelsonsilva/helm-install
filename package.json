{
  "name": "helm-install",
  "version": "0.0.0",
  "private": true,
  "description": "Helm install GitHub Action",
  "main": "src/main.ts",
  "scripts": {
    "build": "ncc build src/main.ts --minify",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsonsilva/helm-install.git"
  },
  "keywords": [
    "actions",
    "helm",
    "install"
  ],
  "author": "Nelson Silva",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "typescript": "^3.6.4"
  }
}
